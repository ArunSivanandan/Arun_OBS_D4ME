<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/llt_field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/vehicle_type_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_color"
            android:theme="@style/MyEditTextTheme">

            <org.custom_font_library.CustomEditText
                style="@style/Linotte_Light"
                android:id="@+id/edt_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_vehicle_type_hint"
                android:textColorHint="@color/hint_color"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/vehicle_type"
                android:drawableStart="@drawable/vehicle_type"
                android:drawablePadding="15dp"
                android:paddingTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@color/hint_color"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/vehicle_no_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_color"
            android:theme="@style/MyEditTextTheme">

            <org.custom_font_library.CustomEditText
                style="@style/Linotte_Light"
                android:id="@+id/edt_vehicle_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_vehicle_no_hint"
                android:textColorHint="@color/hint_color"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/num"
                android:drawableStart="@drawable/num"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view_vehicle_no"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@color/hint_color"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pwd_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_color"
            android:theme="@style/MyEditTextTheme">

            <org.custom_font_library.CustomEditText
                style="@style/Linotte_Light"
                android:id="@+id/edt_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_license_no_hint"
                android:textColorHint="@color/hint_color"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/license"
                android:drawableStart="@drawable/license"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view_license"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@color/hint_color"/>

        <org.custom_font_library.CustomTextView
            style="@style/Linotte_Semi_Bold"
            android:id="@+id/tv_charges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/txt_charges_include" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/insurance_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_color"
            android:theme="@style/MyEditTextTheme">

            <org.custom_font_library.CustomEditText
                style="@style/Linotte_Light"
                android:id="@+id/edt_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_insurance_hint"
                android:textColorHint="@color/hint_color"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/insurance"
                android:drawableStart="@drawable/insurance"
                android:drawablePadding="15dp"
                android:paddingTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view_insurance"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@color/hint_color"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/gas_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_color"
            android:theme="@style/MyEditTextTheme">

            <org.custom_font_library.CustomEditText
                style="@style/Linotte_Light"
                android:id="@+id/edt_gas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_gas_hint"
                android:textColorHint="@color/hint_color"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/gas"
                android:drawableStart="@drawable/gas"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view_gas"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@color/hint_color"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/labour_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_color"
            android:theme="@style/MyEditTextTheme">

            <org.custom_font_library.CustomEditText
                style="@style/Linotte_Light"
                android:id="@+id/edt_labour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_labour_hint"
                android:textColorHint="@color/hint_color"
                android:background="@null"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/labour"
                android:drawableStart="@drawable/labour"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view_labour"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@color/hint_color"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cost_per_km_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_color"
            android:theme="@style/MyEditTextTheme">

            <org.custom_font_library.CustomEditText
                style="@style/Linotte_Light"
                android:id="@+id/edt_cost_per_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_cost_hint"
                android:textColorHint="@color/hint_color"
                android:background="@null"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/cost"
                android:drawableStart="@drawable/cost"
                android:drawablePadding="15dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view_cost_per_km"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@color/hint_color"/>

        <RelativeLayout
            android:id="@+id/rlt_added_provisions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <org.custom_font_library.CustomTextView
                style="@style/Linotte_Semi_Bold"
                android:id="@+id/tv_added_provisions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:gravity="start"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/txt_additional_provision" />

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:button="@null"
                android:textOff=""
                android:textOn=""
                android:checked="true"
                android:theme="@style/switchCompact"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_additional_provisions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:clipToPadding="false"
            android:overScrollMode="always"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/llt_optional_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view_added_provisions"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:background="@color/hint_color"/>

            <org.custom_font_library.CustomTextView
                style="@style/Linotte_Light"
                android:id="@+id/tv_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_black_border"
                android:drawableLeft="@drawable/camera"
                android:drawableStart="@drawable/camera"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/hint_color"
                android:text="@string/txt_additional_provision" />

            <org.custom_font_library.CustomTextView
                style="@style/Linotte_Light"
                android:id="@+id/tv_img_uploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/attache_icon"
                android:drawableStart="@drawable/attache_icon"
                android:drawablePadding="10dp"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:text="@string/no_of_img_uploaded" />

            <org.custom_font_library.CustomTextView
                style="@style/Linotte_Light"
                android:id="@+id/tv_create_profile_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/rounded_corners_background"
                android:textSize="16sp"
                android:textColor="@color/pure_white"
                android:text="@string/txt_save_btn"
                android:filterTouchesWhenObscured="true" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

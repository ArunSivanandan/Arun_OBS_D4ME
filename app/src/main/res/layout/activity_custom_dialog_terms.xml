<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/customRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/dialogTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:lineSpacingMultiplier="1.4"
            android:text=""
            android:textColor="@color/orange"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_green"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/dialogTextTitle"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/dialogTextTitle">
        <TextView
            android:id="@+id/dialogTextMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingMultiplier="1.4"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
        </ScrollView>
        <TextView
            android:id="@+id/customDenyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groups_and_events_message"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:padding="5dp"
            android:textColor="@color/pure_white"
            android:textSize="15sp"
            android:layout_alignLeft="@+id/scrollView"
            android:layout_alignStart="@+id/scrollView"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <TextView
            android:id="@+id/customAllowTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/groups_and_events_message"
            android:layout_alignRight="@+id/scrollView"
            android:layout_alignEnd="@+id/scrollView"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:padding="10dp"
            android:visibility="gone"
            android:textColor="@color/pure_white"
            android:textSize="15sp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <TextView
            android:id="@+id/customOkTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollView"
            android:layout_centerHorizontal="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:padding="5dp"
            android:textColor="@color/pure_white"
            android:textSize="15sp"
            android:background="@color/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless"/>


    </RelativeLayout>

    <View
        android:id="@+id/transparantLine"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/customRelativeLayout"/>

    <ImageView
        android:id="@+id/customDialogImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transparantLine"
        android:layout_marginTop="0dp"
        android:layout_centerInParent="true" />
</RelativeLayout>

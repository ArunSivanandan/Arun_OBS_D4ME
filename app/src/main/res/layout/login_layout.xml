<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/login_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tv_appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="25dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_logo"/>

            <LinearLayout
                android:id="@+id/llt_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_appname"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <!--<TextView
                    android:id="@+id/tv_label_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginStart="55dp"
                    android:textSize="14sp"
                    android:text="E-MAIL"
                    android:textColor="@color/progress_loading_color"/>-->

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/hint_color"
                    android:theme="@style/MyEditTextTheme">

                    <org.custom_font_library.CustomEditText
                        style="@style/Linotte_Light"
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_email_hint"
                        android:textColorHint="@color/hint_color"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:drawableLeft="@drawable/email_icon"
                        android:drawableStart="@drawable/email_icon"
                        android:drawablePadding="15dp"
                        android:paddingTop="10dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/hint_color"/>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/view_username"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/hint_color"/>

                <!--<TextView
                    android:id="@+id/tv_label_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginStart="55dp"
                    android:textSize="14sp"
                    android:text="PASSWORD"
                    android:textColor="@color/progress_loading_color"/>-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/hint_color"
                    android:theme="@style/MyEditTextTheme"
                    app:passwordToggleEnabled="true">

                    <org.custom_font_library.CustomEditText
                        style="@style/Linotte_Light"
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edt_password_hint"
                        android:textColorHint="@color/hint_color"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:paddingTop="10dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="10dp"
                        android:drawableLeft="@drawable/password_icon"
                        android:drawableStart="@drawable/password_icon"
                        android:drawablePadding="15dp"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/view_password"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/hint_color"/>
            </LinearLayout>

            <org.custom_font_library.CustomTextView
                style="@style/Linotte_Light"
                android:id="@+id/tv_forgotpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:text="@string/txt_forgotpwd"
                android:layout_below="@+id/llt_lay"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <org.custom_font_library.CustomTextView
                style="@style/Linotte_Light"
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tv_forgotpwd"
                android:padding="12dp"
                android:gravity="center"
                android:background="@drawable/rounded_corners_background"
                android:textSize="16sp"
                android:textColor="@color/pure_white"
                android:text="@string/login_btn"
                android:filterTouchesWhenObscured="true" />

            <org.custom_font_library.CustomTextView
                style="@style/Linotte_Light"
                android:id="@+id/tv_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_login"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/rounded_colored_border_bg"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:text="@string/signup_btn"
                android:filterTouchesWhenObscured="true" />

            <View
                android:id="@+id/view_line_left"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toLeftOf="@+id/tv_logInWith"
                android:layout_toStartOf="@+id/tv_logInWith"
                android:layout_alignBottom="@+id/tv_logInWith"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/dark_gray"/>

            <View
                android:id="@+id/view_line_right"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toRightOf="@+id/tv_logInWith"
                android:layout_toEndOf="@+id/tv_logInWith"
                android:layout_alignBottom="@+id/tv_logInWith"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/dark_gray"/>

            <org.custom_font_library.CustomTextView
                style="@style/Linotte_Light"
                android:id="@+id/tv_logInWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_signup"
                android:layout_marginTop="50dp"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:text="@string/txt_login_with"/>

            <ImageView
                android:id="@+id/iv_facebook_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_logInWith"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/fb_logo"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <include
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="70dp"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/progress_loading_color"
                android:text="@string/app_name" />

            <LinearLayout
                android:id="@+id/llt_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_appname"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_label_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:textSize="14sp"
                    android:text="E-MAIL"
                    android:textColor="@color/progress_loading_color"/>

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-Mail"
                    android:textColorHint="@color/signIn_txt"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@android:drawable/ic_dialog_email"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:drawablePadding="7dp"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/signIn_txt"/>

                <View
                    android:id="@+id/view_username"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/tv_label_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:textSize="14sp"
                    android:text="PASSWORD"
                    android:textColor="@color/progress_loading_color"/>

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="@color/signIn_txt"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:drawableLeft="@android:drawable/ic_lock_lock"
                    android:drawableStart="@android:drawable/ic_lock_lock"
                    android:drawablePadding="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/signIn_txt"/>

                <View
                    android:id="@+id/view_password"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_forgotpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/signUp1_txt"
                android:text="Forgot Password?"
                android:layout_below="@+id/llt_lay"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tv_forgotpwd"
                android:padding="10dp"
                android:gravity="center"
                android:background="@color/progress_loading_color"
                android:textSize="16sp"
                android:textColor="@color/pure_white"
                android:text="Login"
                android:filterTouchesWhenObscured="true" />

            <TextView
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btn_login"
                android:padding="10dp"
                android:gravity="center"
                android:background="@color/pure_white"
                android:textSize="16sp"
                android:textColor="@color/progress_loading_color"
                android:text="Sign Up"
                android:filterTouchesWhenObscured="true" />

            <View
                android:id="@+id/view_line_left"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toLeftOf="@+id/tv_logInWith"
                android:layout_toStartOf="@+id/tv_logInWith"
                android:layout_alignBottom="@+id/tv_logInWith"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/black"/>

            <View
                android:id="@+id/view_line_right"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toRightOf="@+id/tv_logInWith"
                android:layout_toEndOf="@+id/tv_logInWith"
                android:layout_alignBottom="@+id/tv_logInWith"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_logInWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_signup"
                android:layout_marginTop="50dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Log In With"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_logInWith"
                android:layout_alignLeft="@+id/btn_signup"
                android:layout_alignStart="@+id/btn_signup"
                android:layout_alignRight="@+id/btn_signup"
                android:layout_alignEnd="@+id/btn_signup"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Facebook"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Google  "/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
